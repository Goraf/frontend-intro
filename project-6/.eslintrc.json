{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "shared-node-browser": true,
    "es6": true
  },
  "extends": "airbnb-base/whitespace",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      "warn",
      "double"
    ],
    "linebreak-style": [
      "off"
    ],
    "func-style": [
      "off"
    ]
  }
}